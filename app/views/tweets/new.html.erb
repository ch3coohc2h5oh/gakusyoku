<div class="container my-4">
  <h3 class="text-center mb-4">新規投稿ページ</h3>

  <div class="card shadow-sm p-4">
    <%= form_for @tweet, html: { multipart: true } do |f| %>
      <div class="mb-3">
        <%= f.label :name, "料理名", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "例：夏野菜たっぷりカレー" %>
      </div>

      <div class="mb-3">
        <%= f.label :about, "コメント", class: "form-label" %>
        <%= f.text_area :about, rows: 3, class: "form-control", placeholder: "メニューの特徴やおすすめポイントを書いてください" %>
      </div>

      <div class="mb-3">
        <%= f.label :image, "画像", class: "form-label" %>
        <%= f.file_field :image, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between">
        <%= f.submit "投稿する", class: "btn btn-primary" %>
        <%= link_to "一覧に戻る", tweets_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>