<div class="container my-4">
  <h3 class="text-center mb-4">投稿内容を編集する</h3>

  <div class="card shadow-sm p-4">
    <%= form_for @tweet, html: { multipart: true } do |f| %>
      <div class="mb-3">
        <%= f.label :name, "料理名", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "料理名を入力してください" %>
      </div>

      <div class="mb-3">
        <%= f.label :about, "コメント", class: "form-label" %>
        <%= f.text_area :about, rows: 3, class: "form-control", placeholder: "メニューの特徴やおすすめポイントを書いてください" %>
      </div>

      <div class="mb-3">
        <%= f.label :image, "画像", class: "form-label" %>
        <%= f.file_field :image, class: "form-control" %>
        <% if @tweet.image.attached? %>
          <div class="mt-2">
            <p class="small text-muted">現在の画像:</p>
            <%= image_tag @tweet.image, class: "img-thumbnail", style: "max-width: 200px;" %>
          </div>
        <% end %>
      </div>

      <div class="d-flex justify-content-between">
        <%= f.submit "編集する", class: "btn btn-warning" %>
        <%= link_to "投稿詳細に戻る", tweet_path(@tweet), class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>