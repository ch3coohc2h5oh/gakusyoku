<h1 class="text-center my-4">みんなのオススメのメニューを投稿しよう！</h1>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3>一覧ページ</h3>
    <%= link_to "新規投稿へ", new_tweet_path, class: "btn btn-primary" %>
  </div>

  <div class="mb-4">
    <h4>メニューを検索</h4>
    <%= form_tag({controller:"tweets", action:"index"}, method: :get, class: "d-flex") do %>
      <%= text_field_tag :search, params[:search], class: "form-control me-2", placeholder: "メニュー名を入力" %>
      <%= submit_tag '検索する', class: "btn btn-outline-success" %>
    <% end %>
  </div>

  <div class="row">
    <% @tweets.each do |t| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <% if t.image.attached? %>
            <%= image_tag t.image, class: "card-img-top", style: "height:200px; object-fit:cover;" %>
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= t.name %></h5>
            <p class="card-text text-muted"><%= t.about %></p>
            <p class="small">投稿者: <%= t.user.email %></p>

            <div class="d-flex align-items-center mb-2">
              <% if user_signed_in? %>
                <% if current_user.already_liked?(t) %>
                  <%= link_to tweet_like_path(id: t.id, tweet_id: t.id), data: { turbo_method: :delete }, class: "me-2" do %>
                    <i class="fas fa-heart text-danger"></i>
                    <%= t.likes.count %>
                  <% end %>
                <% else %>
                  <%= link_to tweet_likes_path(id: t.id, tweet_id: t.id), data: { turbo_method: :post }, class: "me-2" do %>
                    <i class="fas fa-heart text-danger"></i>
                    <%= t.likes.count %>
                  <% end %>
                <% end %>
              <% else %>
                <i class="fas fa-heart text-danger me-1"></i><%= t.likes.count %>
              <% end %>
            </div>

            <p class="small text-muted"><%= t.created_at.strftime("%Y-%m-%d %H:%M") %></p>

            <div class="d-flex flex-wrap gap-2">
              <%= link_to "詳細へ", tweet_path(t.id), class: "btn btn-sm btn-outline-primary" %>
              <% if user_signed_in? && (current_user.admin? || current_user == t.user) %>
                <%= link_to "編集する", edit_tweet_path(t.id), class: "btn btn-sm btn-outline-secondary" %>
                <%= button_to "削除する", tweet_path(t.id), method: :delete, class: "btn btn-sm btn-outline-danger" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

